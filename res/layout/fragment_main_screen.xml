<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/restuarant_name"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_name"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/custom_order_button" />

    <Button
        android:id="@+id/about_us_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_button"
        android:layout_marginLeft="46dp"
        android:layout_toRightOf="@+id/order_button"
        android:background="@drawable/custon_aboutus_button" />

    <Button
        android:id="@+id/special_offers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order_button"
        android:layout_below="@+id/order_button"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_offers_button" />

    <Button
        android:id="@+id/directions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/special_offers_button"
        android:layout_alignBottom="@+id/special_offers_button"
        android:layout_alignLeft="@+id/about_us_button"
        android:background="@drawable/custom_offers_button" />
     <Button
        android:id="@+id/contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/special_offers_button"
        android:layout_alignLeft="@+id/special_offers_button"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_offers_button" />

</RelativeLayout>